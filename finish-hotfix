#!/bin/bash

# Script to finish a hotfix branch
# Usage: ./scripts/finish-hotfix.sh

set -e  # Exit on error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored messages
print_error() {
    echo -e "${RED}ERROR: $1${NC}"
}

print_success() {
    echo -e "${GREEN}✓ $1${NC}"
}

print_info() {
    echo -e "${YELLOW}➜ $1${NC}"
}

# Step progress variables
TOTAL_STEPS=8
CURRENT_STEP=0

# Function to print step progress
print_step() {
    ((CURRENT_STEP++))
    echo ""
    echo -e "${YELLOW}[${CURRENT_STEP}/${TOTAL_STEPS}] $1${NC}"
}

# Global variable to store command output for summary extraction
CMD_OUTPUT=""
TAIL_LINES=5

# Function to run command with live tail output and capture result
run_cmd() {
    local tmp_file=$(mktemp)

    # Run command, output to temp file
    "$@" > "$tmp_file" 2>&1 &
    local cmd_pid=$!

    # Show live tail of output
    tail -n $TAIL_LINES -f "$tmp_file" 2>/dev/null &
    local tail_pid=$!

    # Wait for command to finish
    wait $cmd_pid
    local exit_code=$?

    # Small delay to let tail catch up
    sleep 0.1

    # Kill tail process
    kill $tail_pid 2>/dev/null
    wait $tail_pid 2>/dev/null

    # Count lines shown and clear them
    local lines_shown=$(wc -l < "$tmp_file")
    if [ "$lines_shown" -gt "$TAIL_LINES" ]; then
        lines_shown=$TAIL_LINES
    fi

    # Move cursor up and clear the tail output
    for ((i=0; i<lines_shown; i++)); do
        printf "\033[1A\033[2K"
    done

    # Store output for summary extraction
    CMD_OUTPUT=$(cat "$tmp_file")
    rm -f "$tmp_file"

    return $exit_code
}

# Summary extraction helpers
parse_merge_stats() {
    local output="$1"
    local files=$(echo "$output" | grep -oE '[0-9]+ files? changed' | head -1)
    local insertions=$(echo "$output" | grep -oE '[0-9]+ insertions?\(\+\)' | head -1 | grep -oE '[0-9]+')
    local deletions=$(echo "$output" | grep -oE '[0-9]+ deletions?\(-\)' | head -1 | grep -oE '[0-9]+')

    if [ -n "$files" ]; then
        local result="$files"
        if [ -n "$insertions" ]; then
            result="$result, +$insertions"
        fi
        if [ -n "$deletions" ]; then
            result="$result -$deletions"
        fi
        echo "$result"
    else
        echo ""
    fi
}

parse_push_stats() {
    local output="$1"
    local objects=$(echo "$output" | grep -oE 'Total [0-9]+' | head -1 | grep -oE '[0-9]+')
    local bytes=$(echo "$output" | grep -oE '[0-9.]+ (KiB|bytes)' | head -1)

    if [ -n "$objects" ]; then
        if [ -n "$bytes" ]; then
            echo "$objects objects, $bytes"
        else
            echo "$objects objects"
        fi
    else
        echo ""
    fi
}

parse_pull_stats() {
    local output="$1"
    if echo "$output" | grep -q "Fast-forward"; then
        local commits=$(echo "$output" | grep -oE 'by [0-9]+ commits' | head -1 | grep -oE '[0-9]+')
        if [ -n "$commits" ]; then
            echo "fast-forward, $commits commits"
        else
            echo "fast-forward"
        fi
    elif echo "$output" | grep -q "Already up to date"; then
        echo "already up to date"
    else
        echo ""
    fi
}

# Function to check if there are uncommitted changes
check_uncommitted_changes() {
    if [[ -n $(git status -s) ]]; then
        print_error "You have uncommitted changes. Please commit or stash them first."
        git status -s
        exit 1
    fi
}

# Function to check if branch exists
branch_exists() {
    git show-ref --verify --quiet refs/heads/$1
}

# Get current branch
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
print_info "Current branch: $CURRENT_BRANCH"

# Verify it's a hotfix branch
if [[ ! "$CURRENT_BRANCH" =~ ^hotfix/ ]]; then
    print_error "Current branch is not a hotfix branch (must start with 'hotfix/')"
    exit 1
fi

# Check for uncommitted changes
check_uncommitted_changes

# Show what will be done
echo ""
print_info "This will:"
echo "  1. Fetch latest changes from remote"
echo "  2. Merge '$CURRENT_BRANCH' into 'master'"
echo "  3. Merge 'master' into 'develop'"
echo "  4. Push 'master' and 'develop' to remote"
echo ""

# Step 1: Fetch from remote
print_step "Fetching latest changes from remote"
if run_cmd git fetch origin; then
    print_success "Fetched from origin"
else
    print_error "Failed to fetch from origin"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 2: Update local master
print_step "Updating local master branch"
git checkout master > /dev/null 2>&1
if run_cmd git pull origin master; then
    local_stats=$(parse_pull_stats "$CMD_OUTPUT")
    if [ -n "$local_stats" ]; then
        print_success "Updated master ($local_stats)"
    else
        print_success "Updated master"
    fi
else
    print_error "Failed to update master"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 3: Merge hotfix into master
print_step "Merging hotfix into master"
if run_cmd git merge --no-ff "$CURRENT_BRANCH" -m "Merge $CURRENT_BRANCH into master"; then
    merge_stats=$(parse_merge_stats "$CMD_OUTPUT")
    if [ -n "$merge_stats" ]; then
        print_success "Merged $CURRENT_BRANCH → master ($merge_stats)"
    else
        print_success "Merged $CURRENT_BRANCH → master"
    fi
else
    print_error "Failed to merge $CURRENT_BRANCH into master"
    print_error "Please resolve conflicts manually"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 4: Update local develop
print_step "Updating local develop branch"
if branch_exists develop; then
    git checkout develop > /dev/null 2>&1
else
    git checkout -b develop origin/develop > /dev/null 2>&1
fi
if run_cmd git pull origin develop; then
    local_stats=$(parse_pull_stats "$CMD_OUTPUT")
    if [ -n "$local_stats" ]; then
        print_success "Updated develop ($local_stats)"
    else
        print_success "Updated develop"
    fi
else
    print_error "Failed to update develop"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 5: Merge master into develop
print_step "Merging master into develop"
if run_cmd git merge --no-ff master -m "Merge master into develop (from $CURRENT_BRANCH)"; then
    merge_stats=$(parse_merge_stats "$CMD_OUTPUT")
    if [ -n "$merge_stats" ]; then
        print_success "Merged master → develop ($merge_stats)"
    else
        print_success "Merged master → develop"
    fi
else
    print_error "Failed to merge master into develop"
    print_error "Please resolve conflicts manually"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 6: Push master and trigger deployment
print_step "Pushing master and triggering deployment"
if run_cmd git push origin master; then
    push_stats=$(parse_push_stats "$CMD_OUTPUT")

    # Try to trigger deployment workflow
    WORKFLOW=$(gh workflow list 2>/dev/null | grep -i "prod" | grep -i "deployment" | head -n 1 | awk '{sub(/[[:space:]]+(active|disabled|state).*/, ""); print}')
    deploy_msg=""
    if [ -n "$WORKFLOW" ]; then
        if gh workflow run "$WORKFLOW" --ref master > /dev/null 2>&1; then
            deploy_msg=" · Triggered deployment"
        fi
    fi

    if [ -n "$push_stats" ]; then
        print_success "Pushed master ($push_stats)$deploy_msg"
    else
        print_success "Pushed master$deploy_msg"
    fi
else
    print_error "Failed to push master"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 7: Push develop
print_step "Pushing develop"
if run_cmd git push origin develop; then
    push_stats=$(parse_push_stats "$CMD_OUTPUT")
    if [ -n "$push_stats" ]; then
        print_success "Pushed develop ($push_stats)"
    else
        print_success "Pushed develop"
    fi
else
    print_error "Failed to push develop"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 8: Clean up hotfix branch
print_step "Cleaning up hotfix branch"
git checkout master > /dev/null 2>&1
git branch -d "$CURRENT_BRANCH" > /dev/null 2>&1
if run_cmd git push origin --delete "$CURRENT_BRANCH"; then
    print_success "Deleted $CURRENT_BRANCH (local + remote)"
else
    # Local delete succeeded, remote might have already been deleted
    print_success "Deleted $CURRENT_BRANCH (local)"
fi

echo ""
print_success "Hotfix workflow completed successfully!"
print_info "Current branch: $(git rev-parse --abbrev-ref HEAD)"
