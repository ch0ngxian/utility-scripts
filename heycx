#!/bin/bash

# heycx - Opinionated utility toolkit that makes developer life better
# Usage: heycx <command> [subcommand]

set -e  # Exit on error

VERSION="1.0.3"
DEMO=false

# ============================================================================
# Common utilities
# ============================================================================

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
BOLD='\033[1m'
GRAY='\033[0;90m'
WHITE='\033[0;37m'
NC='\033[0m' # No Color

print_error() {
    echo -e "${RED}ERROR: $1${NC}"
}

print_success() {
    echo -e "${GREEN}✓ $1${NC}"
}

print_info() {
    echo -e "${YELLOW}➜ $1${NC}"
}

print_step_success() {
    echo -e "    ${GREEN}✓ $1${NC}"
}

# Step progress variables
TOTAL_STEPS=0
CURRENT_STEP=0

print_step() {
    ((CURRENT_STEP++))
    echo ""
    echo -e "${GREEN}⏺ ${BOLD}Step ${CURRENT_STEP}${NC} ${WHITE}$1${NC}"
}

# Global variable to store command output for summary extraction
CMD_OUTPUT=""
TAIL_LINES=3

print_cmd_tail() {
    local output="$1"

    if [ -z "$output" ]; then
        return 0
    fi

    local is_first=true
    echo "$output" | tail -n "$TAIL_LINES" | while IFS= read -r line; do
        if [ "$is_first" = true ]; then
            printf "  ${GRAY}⎿ %s${NC}\n" "$line"
            is_first=false
        else
            printf "    ${GRAY}%s${NC}\n" "$line"
        fi
    done
}

# Function to run command, capture output, and show last lines
run_cmd() {
    local tmp_file=$(mktemp)

    # Run command, output to temp file
    "$@" > "$tmp_file" 2>&1
    local exit_code=$?

    # Store output for summary extraction
    CMD_OUTPUT=$(cat "$tmp_file")
    rm -f "$tmp_file"

    print_cmd_tail "$CMD_OUTPUT"

    return $exit_code
}

run_demo_cmd() {
    local output="$1"
    CMD_OUTPUT="$output"
    print_cmd_tail "$CMD_OUTPUT"
    return 0
}

demo_hotfix_start() {
    TOTAL_STEPS=6
    CURRENT_STEP=0

    print_info "Demo mode: no changes will be made"
    HOTFIX_NAME="${1:-demo-fix-login-bug}"
    if [[ "$HOTFIX_NAME" =~ ^hotfix/ ]]; then
        HOTFIX_BRANCH="$HOTFIX_NAME"
    else
        HOTFIX_BRANCH="hotfix/$HOTFIX_NAME"
    fi
    echo ""

    print_info "This will:"
    echo "  1. Stash current changes (if any)"
    echo "  2. Fetch latest changes from remote"
    echo "  3. Update master and develop branches"
    echo "  4. Create hotfix branch '$HOTFIX_BRANCH' from master"
    echo "  5. Apply stashed changes (if any)"
    echo ""

    print_step "Stashing current changes"
    run_demo_cmd "Saved working directory and index state WIP on demo"
    print_step_success "Stashed changes"

    print_step "Fetching latest changes from remote"
    run_demo_cmd $'From github.com:org/repo\n * [new branch]      feature/x -> origin/feature/x'
    print_step_success "Fetched from origin"

    print_step "Updating master branch"
    run_demo_cmd "Already up to date."
    print_step_success "Updated master (already up to date)"

    print_step "Updating develop branch"
    run_demo_cmd $'Fast-forward\n 2 files changed, 10 insertions(+), 2 deletions(-)'
    print_step_success "Updated develop (fast-forward, 1 commits)"

    print_step "Creating hotfix branch"
    run_demo_cmd "Switched to a new branch '$HOTFIX_BRANCH'"
    print_step_success "Created $HOTFIX_BRANCH from master"

    print_step "Applying stashed changes"
    run_demo_cmd "$(printf 'On branch %s\nChanges not staged for commit' "$HOTFIX_BRANCH")"
    print_step_success "Applied stashed changes"

    echo ""
    print_success "Hotfix branch '$HOTFIX_BRANCH' created successfully!"
}

demo_hotfix_finish() {
    TOTAL_STEPS=8
    CURRENT_STEP=0

    print_info "Demo mode: no changes will be made"
    CURRENT_BRANCH="hotfix/demo-fix-login-bug"
    print_info "Current branch: $CURRENT_BRANCH"
    echo ""

    print_info "This will:"
    echo "  1. Fetch latest changes from remote"
    echo "  2. Merge '$CURRENT_BRANCH' into 'master'"
    echo "  3. Merge 'master' into 'develop'"
    echo "  4. Push 'master' and 'develop' to remote"
    echo ""

    print_step "Fetching latest changes from remote"
    run_demo_cmd $'From github.com:org/repo\n * [new tag]         v1.2.3 -> v1.2.3'
    print_step_success "Fetched from origin"

    print_step "Updating local master branch"
    run_demo_cmd "Already up to date."
    print_step_success "Updated master (already up to date)"

    print_step "Merging hotfix into master"
    run_demo_cmd $'Merge made by the \'ort\' strategy.\n 1 file changed, 2 insertions(+)'
    print_step_success "Merged $CURRENT_BRANCH → master (1 files changed, +2)"

    print_step "Updating local develop branch"
    run_demo_cmd "Already up to date."
    print_step_success "Updated develop (already up to date)"

    print_step "Merging master into develop"
    run_demo_cmd $'Merge made by the \'ort\' strategy.\n 1 file changed, 2 insertions(+)'
    print_step_success "Merged master → develop (1 files changed, +2)"

    print_step "Pushing master and triggering deployment"
    run_demo_cmd $'To github.com:org/repo.git\n   abc1234..def5678  master -> master'
    print_step_success "Pushed master · Triggered deployment"

    print_step "Pushing develop"
    run_demo_cmd $'To github.com:org/repo.git\n   1111111..2222222  develop -> develop'
    print_step_success "Pushed develop"

    print_step "Cleaning up hotfix branch"
    run_demo_cmd "Deleted branch $CURRENT_BRANCH (was def5678)."
    print_step_success "Deleted $CURRENT_BRANCH (local + remote)"

    echo ""
    print_success "Hotfix workflow completed successfully!"
}

demo_sync() {
    TOTAL_STEPS=6
    CURRENT_STEP=0

    print_info "Demo mode: no changes will be made"
    ORIGINAL_BRANCH="feature/demo"
    echo ""
    print_info "This will pull the latest master and develop branches"
    echo ""

    print_step "Stashing current changes"
    run_demo_cmd "Saved working directory and index state WIP on demo"
    print_step_success "Stashed changes"

    print_step "Fetching latest changes from remote"
    run_demo_cmd $'From github.com:org/repo\n * [new branch]      feature/y -> origin/feature/y'
    print_step_success "Fetched from origin"

    print_step "Updating master branch"
    run_demo_cmd "Already up to date."
    print_step_success "Updated master (already up to date)"

    print_step "Updating develop branch"
    run_demo_cmd $'Fast-forward\n 1 file changed, 1 insertion(+)'
    print_step_success "Updated develop (fast-forward, 1 commits)"

    print_step "Returning to original branch"
    run_demo_cmd "$(printf "Switched to branch '%s'" "$ORIGINAL_BRANCH")"
    print_step_success "Switched to $ORIGINAL_BRANCH"

    print_step "Applying stashed changes"
    run_demo_cmd "$(printf 'On branch %s\nChanges not staged for commit' "$ORIGINAL_BRANCH")"
    print_step_success "Applied stashed changes"

    echo ""
    print_success "Successfully updated master and develop branches!"
}

demo_docker_enter() {
    print_info "Demo mode: no changes will be made"
    print_info "Entering: my-api-container (abc123)"
    echo "  ⎿ /bin/zsh"
}

demo_pr_create() {
    TOTAL_STEPS=3
    CURRENT_STEP=0

    print_info "Demo mode: no changes will be made"
    CURRENT_BRANCH="hotfix/fix-login-bug"
    BASE_BRANCH="master"
    PR_TITLE="Fix login bug"
    echo ""

    print_info "This will:"
    echo "  1. Push '$CURRENT_BRANCH' to remote"
    echo "  2. Create a pull request → '$BASE_BRANCH'"
    echo ""

    print_step "Pushing branch to remote"
    run_demo_cmd $'To github.com:org/repo.git\n * [new branch]      hotfix/fix-login-bug -> hotfix/fix-login-bug'
    print_step_success "Pushed $CURRENT_BRANCH to origin"

    print_step "Creating pull request"
    run_demo_cmd "Creating pull request for hotfix/fix-login-bug into master"
    print_step_success "Created PR #42: $PR_TITLE"

    print_step "Pull request details"
    echo -e "    ${CYAN}Title:${NC} $PR_TITLE"
    echo -e "    ${CYAN}Base:${NC}  $BASE_BRANCH ← $CURRENT_BRANCH"
    echo -e "    ${CYAN}URL:${NC}   https://github.com/org/repo/pull/42"

    echo ""
    print_success "Pull request created successfully!"
}

# ============================================================================
# Summary extraction helpers
# ============================================================================

parse_push_stats() {
    local output="$1"
    local objects=$(echo "$output" | grep -oE 'Total [0-9]+' | head -1 | grep -oE '[0-9]+')
    local bytes=$(echo "$output" | grep -oE '[0-9.]+ (KiB|bytes)' | head -1)

    if [ -n "$objects" ]; then
        if [ -n "$bytes" ]; then
            echo "$objects objects, $bytes"
        else
            echo "$objects objects"
        fi
    else
        echo ""
    fi
}

parse_pull_stats() {
    local output="$1"
    if echo "$output" | grep -q "Fast-forward"; then
        local commits=$(echo "$output" | grep -oE 'by [0-9]+ commits' | head -1 | grep -oE '[0-9]+')
        if [ -n "$commits" ]; then
            echo "fast-forward, $commits commits"
        else
            echo "fast-forward"
        fi
    elif echo "$output" | grep -q "Already up to date"; then
        echo "already up to date"
    else
        echo ""
    fi
}

parse_merge_stats() {
    local output="$1"
    local files=$(echo "$output" | grep -oE '[0-9]+ files? changed' | head -1)
    local insertions=$(echo "$output" | grep -oE '[0-9]+ insertions?\(\+\)' | head -1 | grep -oE '[0-9]+')
    local deletions=$(echo "$output" | grep -oE '[0-9]+ deletions?\(-\)' | head -1 | grep -oE '[0-9]+')

    if [ -n "$files" ]; then
        local result="$files"
        if [ -n "$insertions" ]; then
            result="$result, +$insertions"
        fi
        if [ -n "$deletions" ]; then
            result="$result -$deletions"
        fi
        echo "$result"
    else
        echo ""
    fi
}

# ============================================================================
# Git helpers
# ============================================================================

check_uncommitted_changes() {
    if [[ -n $(git status -s) ]]; then
        return 0  # Has changes
    else
        return 1  # No changes
    fi
}

branch_exists() {
    git show-ref --verify --quiet refs/heads/$1
}

require_clean_working_tree() {
    if check_uncommitted_changes; then
        print_error "You have uncommitted changes. Please commit or stash them first."
        git status -s
        exit 1
    fi
}

# ============================================================================
# Commands
# ============================================================================

cmd_hotfix_start() {
    if [ "$DEMO" = true ]; then
        demo_hotfix_start "$1"
        return
    fi

    TOTAL_STEPS=6
    CURRENT_STEP=0

    # Accept hotfix name argument or prompt
    HOTFIX_NAME="${1:-}"
    if [ -z "$HOTFIX_NAME" ]; then
        read -p "Enter hotfix name: " HOTFIX_NAME
    fi

    if [ -z "$HOTFIX_NAME" ]; then
        print_error "Hotfix name cannot be empty"
        exit 1
    fi

    HOTFIX_BRANCH="hotfix/$HOTFIX_NAME"

    # Check if we have uncommitted changes to stash
    HAS_CHANGES=false
    if check_uncommitted_changes; then
        HAS_CHANGES=true
        print_info "Detected uncommitted changes"
        git status -s
        echo ""
    fi

    # Show planned actions
    print_info "This will:"
    echo "  1. Stash current changes (if any)"
    echo "  2. Fetch latest changes from remote"
    echo "  3. Update master and develop branches"
    echo "  4. Create hotfix branch '$HOTFIX_BRANCH' from master"
    echo "  5. Apply stashed changes (if any)"
    echo ""

    # Step 1: Stash changes if any
    print_step "Stashing current changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash push -m "Temp stash for hotfix: $HOTFIX_BRANCH"; then
            print_step_success "Stashed changes"
        else
            print_error "Failed to stash changes"
            print_cmd_tail "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_step_success "Skipped (no changes to stash)"
    fi

    # Step 2: Fetch from remote
    print_step "Fetching latest changes from remote"
    if run_cmd git fetch origin; then
        print_step_success "Fetched from origin"
    else
        print_error "Failed to fetch from origin"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 3: Update master branch
    print_step "Updating master branch"
    git checkout master > /dev/null 2>&1
    if run_cmd git pull origin master; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_step_success "Updated master ($pull_stats)"
        else
            print_step_success "Updated master"
        fi
    else
        print_error "Failed to update master"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 4: Update develop branch
    print_step "Updating develop branch"
    if branch_exists develop; then
        git checkout develop > /dev/null 2>&1
    else
        git checkout -b develop origin/develop > /dev/null 2>&1
    fi
    if run_cmd git pull origin develop; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_step_success "Updated develop ($pull_stats)"
        else
            print_step_success "Updated develop"
        fi
    else
        print_error "Failed to update develop"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 5: Create hotfix branch from master
    print_step "Creating hotfix branch"
    git checkout master > /dev/null 2>&1
    if git checkout -b "$HOTFIX_BRANCH" > /dev/null 2>&1; then
        print_step_success "Created $HOTFIX_BRANCH from master"
    else
        print_error "Failed to create branch $HOTFIX_BRANCH"
        exit 1
    fi

    # Step 6: Apply stashed changes if any
    print_step "Applying stashed changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash pop; then
            print_step_success "Applied stashed changes"
        else
            print_error "Failed to apply stashed changes"
            print_error "Please resolve conflicts manually"
            print_cmd_tail "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_step_success "Skipped (no changes to apply)"
    fi

    echo ""
    print_success "Hotfix branch '$HOTFIX_BRANCH' created successfully!"
    if [ "$HAS_CHANGES" = true ]; then
        print_info "Your changes have been applied but not committed"
        print_info "Review your changes and commit them manually"
    fi
}

cmd_hotfix_finish() {
    if [ "$DEMO" = true ]; then
        demo_hotfix_finish
        return
    fi

    TOTAL_STEPS=8
    CURRENT_STEP=0

    # Get current branch
    CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
    print_info "Current branch: $CURRENT_BRANCH"

    # Verify it's a hotfix branch
    if [[ ! "$CURRENT_BRANCH" =~ ^hotfix/ ]]; then
        print_error "Current branch is not a hotfix branch (must start with 'hotfix/')"
        exit 1
    fi

    # Check for uncommitted changes
    require_clean_working_tree

    # Show what will be done
    echo ""
    print_info "This will:"
    echo "  1. Fetch latest changes from remote"
    echo "  2. Merge '$CURRENT_BRANCH' into 'master'"
    echo "  3. Merge 'master' into 'develop'"
    echo "  4. Push 'master' and 'develop' to remote"
    echo ""

    # Step 1: Fetch from remote
    print_step "Fetching latest changes from remote"
    if run_cmd git fetch origin; then
        print_step_success "Fetched from origin"
    else
        print_error "Failed to fetch from origin"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 2: Update local master
    print_step "Updating local master branch"
    git checkout master > /dev/null 2>&1
    if run_cmd git pull origin master; then
        local_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$local_stats" ]; then
            print_step_success "Updated master ($local_stats)"
        else
            print_step_success "Updated master"
        fi
    else
        print_error "Failed to update master"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 3: Merge hotfix into master
    print_step "Merging hotfix into master"
    if run_cmd git merge --no-ff "$CURRENT_BRANCH" -m "Merge $CURRENT_BRANCH into master"; then
        merge_stats=$(parse_merge_stats "$CMD_OUTPUT")
        if [ -n "$merge_stats" ]; then
            print_step_success "Merged $CURRENT_BRANCH → master ($merge_stats)"
        else
            print_step_success "Merged $CURRENT_BRANCH → master"
        fi
    else
        print_error "Failed to merge $CURRENT_BRANCH into master"
        print_error "Please resolve conflicts manually"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 4: Update local develop
    print_step "Updating local develop branch"
    if branch_exists develop; then
        git checkout develop > /dev/null 2>&1
    else
        git checkout -b develop origin/develop > /dev/null 2>&1
    fi
    if run_cmd git pull origin develop; then
        local_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$local_stats" ]; then
            print_step_success "Updated develop ($local_stats)"
        else
            print_step_success "Updated develop"
        fi
    else
        print_error "Failed to update develop"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 5: Merge master into develop
    print_step "Merging master into develop"
    if run_cmd git merge --no-ff master -m "Merge master into develop (from $CURRENT_BRANCH)"; then
        merge_stats=$(parse_merge_stats "$CMD_OUTPUT")
        if [ -n "$merge_stats" ]; then
            print_step_success "Merged master → develop ($merge_stats)"
        else
            print_step_success "Merged master → develop"
        fi
    else
        print_error "Failed to merge master into develop"
        print_error "Please resolve conflicts manually"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 6: Push master and trigger deployment
    print_step "Pushing master and triggering deployment"
    if run_cmd git push origin master; then
        push_stats=$(parse_push_stats "$CMD_OUTPUT")

        # Try to trigger deployment workflow
        WORKFLOW=$(gh workflow list 2>/dev/null | grep -i "prod" | grep -i "deployment" | head -n 1 | awk '{sub(/[[:space:]]+(active|disabled|state).*/, ""); print}')
        deploy_msg=""
        if [ -n "$WORKFLOW" ]; then
            if gh workflow run "$WORKFLOW" --ref master > /dev/null 2>&1; then
                deploy_msg=" · Triggered deployment"
            fi
        fi

        if [ -n "$push_stats" ]; then
            print_step_success "Pushed master ($push_stats)$deploy_msg"
        else
            print_step_success "Pushed master$deploy_msg"
        fi
    else
        print_error "Failed to push master"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 7: Push develop
    print_step "Pushing develop"
    if run_cmd git push origin develop; then
        push_stats=$(parse_push_stats "$CMD_OUTPUT")
        if [ -n "$push_stats" ]; then
            print_step_success "Pushed develop ($push_stats)"
        else
            print_step_success "Pushed develop"
        fi
    else
        print_error "Failed to push develop"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 8: Clean up hotfix branch
    print_step "Cleaning up hotfix branch"
    git checkout master > /dev/null 2>&1
    git branch -d "$CURRENT_BRANCH" > /dev/null 2>&1
    if run_cmd git push origin --delete "$CURRENT_BRANCH"; then
        print_step_success "Deleted $CURRENT_BRANCH (local + remote)"
    else
        # Local delete succeeded, remote might have already been deleted
        print_step_success "Deleted $CURRENT_BRANCH (local)"
    fi

    echo ""
    print_success "Hotfix workflow completed successfully!"
}

cmd_sync() {
    if [ "$DEMO" = true ]; then
        demo_sync
        return
    fi

    TOTAL_STEPS=6
    CURRENT_STEP=0

    # Store original branch
    ORIGINAL_BRANCH=$(git rev-parse --abbrev-ref HEAD)

    # Check if we have uncommitted changes to stash
    HAS_CHANGES=false
    if check_uncommitted_changes; then
        HAS_CHANGES=true
        print_info "Detected uncommitted changes"
        git status -s
        echo ""
    fi

    print_info "This will pull the latest master and develop branches"
    echo ""

    # Step 1: Stash changes if any
    print_step "Stashing current changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash push -m "Temp stash for sync"; then
            print_step_success "Stashed changes"
        else
            print_error "Failed to stash changes"
            print_cmd_tail "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_step_success "Skipped (no changes to stash)"
    fi

    # Step 2: Fetch from remote
    print_step "Fetching latest changes from remote"
    if run_cmd git fetch origin; then
        print_step_success "Fetched from origin"
    else
        print_error "Failed to fetch from origin"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 3: Update master branch
    print_step "Updating master branch"
    git checkout master > /dev/null 2>&1
    if run_cmd git pull origin master; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_step_success "Updated master ($pull_stats)"
        else
            print_step_success "Updated master"
        fi
    else
        print_error "Failed to update master"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 4: Update develop branch
    print_step "Updating develop branch"
    if branch_exists develop; then
        git checkout develop > /dev/null 2>&1
    else
        git checkout -b develop origin/develop > /dev/null 2>&1
    fi
    if run_cmd git pull origin develop; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_step_success "Updated develop ($pull_stats)"
        else
            print_step_success "Updated develop"
        fi
    else
        print_error "Failed to update develop"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 5: Return to original branch
    print_step "Returning to original branch"
    if git checkout "$ORIGINAL_BRANCH" > /dev/null 2>&1; then
        print_step_success "Switched to $ORIGINAL_BRANCH"
    else
        print_error "Failed to switch to $ORIGINAL_BRANCH"
        exit 1
    fi

    # Step 6: Apply stashed changes if any
    print_step "Applying stashed changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash pop; then
            print_step_success "Applied stashed changes"
        else
            print_error "Failed to apply stashed changes"
            print_error "Please resolve conflicts manually"
            print_cmd_tail "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_step_success "Skipped (no changes to apply)"
    fi

    echo ""
    print_success "Successfully updated master and develop branches!"
}

cmd_docker_enter() {
    local cname="$1"

    if [ -z "$cname" ]; then
        print_error "Usage: heycx docker enter <name-part>"
        exit 1
    fi

    if [ "$DEMO" = true ]; then
        demo_docker_enter
        return
    fi

    local result
    result=$(docker ps --format "{{.ID}} {{.Names}}" | grep -i "$cname" | head -n 1)

    if [ -z "$result" ]; then
        print_error "No container matching: $cname"
        exit 1
    fi

    local cid cname_full
    read cid cname_full <<< "$result"

    print_info "Entering: $cname_full ($cid)"

    # Try shells in order: zsh -> bash -> sh
    if docker exec "$cid" which zsh >/dev/null 2>&1; then
        docker exec -it "$cid" zsh
    elif docker exec "$cid" which bash >/dev/null 2>&1; then
        docker exec -it "$cid" bash
    else
        docker exec -it "$cid" sh
    fi
}

cmd_pr_create() {
    if [ "$DEMO" = true ]; then
        demo_pr_create
        return
    fi

    TOTAL_STEPS=3
    CURRENT_STEP=0

    # Check gh is available
    if ! command -v gh &> /dev/null; then
        print_error "GitHub CLI (gh) is required for this command"
        print_error "Install it with: brew install gh"
        exit 1
    fi

    # Get current branch
    CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)

    # Ensure not on master or develop
    if [[ "$CURRENT_BRANCH" == "master" || "$CURRENT_BRANCH" == "develop" ]]; then
        print_error "Cannot create a PR from '$CURRENT_BRANCH'. Switch to a feature or hotfix branch first."
        exit 1
    fi

    # Auto-detect base branch
    if [[ "$CURRENT_BRANCH" =~ ^hotfix/ ]]; then
        BASE_BRANCH="master"
    elif [[ "$CURRENT_BRANCH" =~ ^feature/ ]]; then
        BASE_BRANCH="develop"
    else
        read -p "Base branch (default: develop): " BASE_BRANCH
        BASE_BRANCH="${BASE_BRANCH:-develop}"
    fi

    # Generate default title from branch name
    DEFAULT_TITLE=$(echo "$CURRENT_BRANCH" | sed 's|^[^/]*/||' | tr '-' ' ' | sed 's/.*/\u&/')

    # Prompt for PR title
    read -p "PR title ($DEFAULT_TITLE): " PR_TITLE
    PR_TITLE="${PR_TITLE:-$DEFAULT_TITLE}"

    # Prompt for PR body
    read -p "PR description (optional): " PR_BODY

    print_info "Current branch: $CURRENT_BRANCH"
    echo ""
    print_info "This will:"
    echo "  1. Push '$CURRENT_BRANCH' to remote"
    echo "  2. Create a pull request → '$BASE_BRANCH'"
    echo ""

    # Step 1: Push branch to remote
    print_step "Pushing branch to remote"
    if run_cmd git push -u origin "$CURRENT_BRANCH"; then
        push_stats=$(parse_push_stats "$CMD_OUTPUT")
        if [ -n "$push_stats" ]; then
            print_step_success "Pushed $CURRENT_BRANCH to origin ($push_stats)"
        else
            print_step_success "Pushed $CURRENT_BRANCH to origin"
        fi
    else
        print_error "Failed to push $CURRENT_BRANCH to origin"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 2: Create PR
    print_step "Creating pull request"
    if run_cmd gh pr create --base "$BASE_BRANCH" --head "$CURRENT_BRANCH" --title "$PR_TITLE" --body "$PR_BODY"; then
        PR_URL=$(echo "$CMD_OUTPUT" | grep -oE 'https://github.com/[^ ]+' | head -1)
        PR_NUM=$(echo "$PR_URL" | grep -oE '[0-9]+$')
        if [ -n "$PR_NUM" ]; then
            print_step_success "Created PR #$PR_NUM: $PR_TITLE"
        else
            print_step_success "Created PR: $PR_TITLE"
        fi
    else
        print_error "Failed to create pull request"
        print_cmd_tail "$CMD_OUTPUT"
        exit 1
    fi

    # Step 3: Show PR details
    print_step "Pull request details"
    echo -e "    ${CYAN}Title:${NC} $PR_TITLE"
    echo -e "    ${CYAN}Base:${NC}  $BASE_BRANCH ← $CURRENT_BRANCH"
    if [ -n "$PR_URL" ]; then
        echo -e "    ${CYAN}URL:${NC}   $PR_URL"
    fi

    echo ""
    print_success "Pull request created successfully!"
}

show_help() {
    local width=60
    local art_width=41
    local left_pad=$(( (width - art_width) / 2 ))
    local title="heycx - Opinionated utility toolkit v${VERSION}"
    local title_left=$(( (width - ${#title}) / 2 ))
    local title_right=$(( width - ${#title} - title_left ))

    printf "╔%${width}s╗\n" "" | tr " " "═"
    printf "║%${width}s║\n" ""
    printf "║%*s%s%*s║\n" "$left_pad" "" "██╗  ██╗███████╗██╗   ██╗ ██████╗██╗  ██╗" "$((width - left_pad - art_width))" ""
    printf "║%*s%s%*s║\n" "$left_pad" "" "██║  ██║██╔════╝╚██╗ ██╔╝██╔════╝╚██╗██╔╝" "$((width - left_pad - art_width))" ""
    printf "║%*s%s%*s║\n" "$left_pad" "" "███████║█████╗   ╚████╔╝ ██║      ╚███╔╝ " "$((width - left_pad - art_width))" ""
    printf "║%*s%s%*s║\n" "$left_pad" "" "██╔══██║██╔══╝    ╚██╔╝  ██║      ██╔██╗ " "$((width - left_pad - art_width))" ""
    printf "║%*s%s%*s║\n" "$left_pad" "" "██║  ██║███████╗   ██║   ╚██████╗██╔╝ ██╗" "$((width - left_pad - art_width))" ""
    printf "║%*s%s%*s║\n" "$left_pad" "" "╚═╝  ╚═╝╚══════╝   ╚═╝    ╚═════╝╚═╝  ╚═╝" "$((width - left_pad - art_width))" ""
    printf "║%${width}s║\n" ""
    printf "║%*s%s%*s║\n" "$title_left" "" "$title" "$title_right" ""
    printf "║%${width}s║\n" ""
    printf "╚%${width}s╝\n" "" | tr " " "═"
    echo ""
    echo "Usage: heycx <command> [subcommand]"
    echo ""
    echo "Commands:"
    echo "  heycx hotfix start [name]  Start a new hotfix branch"
    echo "  heycx hotfix finish        Complete hotfix (merge to master & develop)"
    echo "  heycx pr create            Create a GitHub pull request"
    echo "  heycx sync                 Update master & develop branches"
    echo "  heycx docker enter <name>  Enter a running Docker container by name"
    echo ""
    echo "https://github.com/ch0ngxian/homebrew-heycx"
}

show_hotfix_help() {
    echo -e "${CYAN}${BOLD}heycx hotfix${NC} - Hotfix workflow commands"
    echo ""
    echo "Usage: heycx hotfix <subcommand> [args]"
    echo ""
    echo "Subcommands:"
    echo "  ${BOLD}start [name]${NC}  Start a new hotfix branch from master"
    echo "  ${BOLD}finish${NC}        Complete hotfix (merge to master & develop)"
    echo ""
    echo "Examples:"
    echo "  heycx hotfix start              # Prompts for name, creates hotfix/<name>"
    echo "  heycx hotfix start fix-bug      # Creates hotfix/fix-bug directly"
    echo "  heycx hotfix finish             # Merges current hotfix branch"
}

show_pr_help() {
    echo -e "${CYAN}${BOLD}heycx pr${NC} - Pull request commands"
    echo ""
    echo "Usage: heycx pr <subcommand>"
    echo ""
    echo "Subcommands:"
    echo "  ${BOLD}create${NC}  Create a GitHub pull request for the current branch"
    echo ""
    echo "Examples:"
    echo "  heycx pr create             # Auto-detects base branch, prompts for title"
    echo ""
    echo "Base branch auto-detection:"
    echo "  hotfix/*  → master"
    echo "  feature/* → develop"
    echo "  other     → prompts for base branch"
    echo ""
    echo "Requires: gh (GitHub CLI)"
}

show_docker_help() {
    echo -e "${CYAN}${BOLD}heycx docker${NC} - Docker utility commands"
    echo ""
    echo "Usage: heycx docker <subcommand> [args]"
    echo ""
    echo "Subcommands:"
    echo "  ${BOLD}enter${NC}     Enter a running container by name"
    echo ""
    echo "Examples:"
    echo "  heycx docker enter api  # Enter container matching 'api'"
}

# ============================================================================
# Command routing
# ============================================================================

ARGS=()
for arg in "$@"; do
    case "$arg" in
        --demo|--dry-run)
            DEMO=true
            ;;
        *)
            ARGS+=("$arg")
            ;;
    esac
done

set -- "${ARGS[@]}"

case "${1:-}" in
    hotfix)
        case "${2:-}" in
            start)
                cmd_hotfix_start "$3"
                ;;
            finish)
                cmd_hotfix_finish
                ;;
            *)
                show_hotfix_help
                ;;
        esac
        ;;
    pr)
        case "${2:-}" in
            create)
                cmd_pr_create
                ;;
            *)
                show_pr_help
                ;;
        esac
        ;;
    sync)
        cmd_sync
        ;;
    docker)
        case "${2:-}" in
            enter)
                cmd_docker_enter "$3"
                ;;
            *)
                show_docker_help
                ;;
        esac
        ;;
    --version|-v)
        echo "heycx version $VERSION"
        ;;
    --help|-h|"")
        show_help
        ;;
    *)
        print_error "Unknown command: $1"
        echo ""
        show_help
        exit 1
        ;;
esac
